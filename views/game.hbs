<div class="container">

  <!-- Sidebar -->
  <div class="sidebar">

    <!-- Turn -->
    <div class="turn">
      <div class="header">Turn Summary</div>
    </div>

    <!-- Chat -->
    <div class="chat">
      <div class="header">Player Chat</div>
      <ul class="messages">
        <li class="runner">Hey dude!</li>
        <li class="runner">hows it going, long time no see</li>
        <li class="corp">Not much man. Got this new deck I'm trying to play around with.</li>
        <li class="runner">be gentle :)</li>
      </ul>
    </div>
  </div>

  <!-- Gaming Table -->
  <div class="game">

    <!-- Corp Area -->
    <div class="corp board">
      <div class="hud">
        <div class="player">
          <span class="side">Corp:</span>
          <span class="name">cpsubrian</span>
        </div>
        <div class="stats">
          <div class="credits">
            <i class="nr nr-credit"></i> <span class="count">8</span>
          </div>
          <div class="badpub">
            <span class="label">BP</span> <span class="count">0</span>
          </div>
          <div class="handsize">
            <span class="label">Cards</span> <span class="count">4</span><span class="total">/5</span>
          </div>
        </div>
      </div>
      <div class="playmat">
        <div class="servers">
          <div class="centrals">
            <div class="archives trash server">
              <div class="root"><div class="label">Arcvhies</div></div>
              <div class="ice"></div>
            </div>
            <div class="hq identity server">
              <div class="root"><div class="label">HQ</div></div>
              <div class="ice"></div>
            </div>
            <div class="rd server">
              <div class="root"><div class="label">R&amp;D</div></div>
              <div class="ice"></div>
            </div>
          </div>
          <div class="remotes">
            <div class="remote server">
              <div class="root"><div class="label">Remote</div></div>
              <div class="ice"></div>
            </div>
            <div class="remote server">
              <div class="root"><div class="label">Remote</div></div>
              <div class="ice"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Runner Area -->
    <div class="runner board">
      <div class="hud">
        <div class="player">
          <span class="side">Runner:</span>
          <span class="name">joshstender</span>
        </div>
        <div class="stats">
          <div class="credits">
            <i class="nr nr-credit"></i> <span class="count">11</span>
          </div>
          <div class="link">
            <i class="nr nr-link"></i> <span class="count">1</span>
          </div>
          <div class="memory">
            <i class="nr nr-mu"></i> <span class="count">4</span>
          </div>
          <div class="tags">
            <span class="label">Tags</span> <span class="count">0</span>
          </div>
          <div class="brain">
            <span class="label">BD</span> <span class="count">0</span>
          </div>
          <div class="handsize">
            <span class="label">Cards</span> <span class="count">5</span><span class="total">/5</span>
          </div>
        </div>
      </div>
      <div class="playmat">
        <div class="rig">
          <div class="secondary">
            <div class="single console">
              <div class="label">Console</div>
            </div>
            <div class="zone programs">
              <div class="label">Programs</div>
            </div>
          </div>
          <div class="secondary">
            <div class="zone hardware">
              <div class="label">Hardware</div>
            </div>
          </div>
          <div class="main">
            <div class="single heap trash">
              <div class="label">Heap</div>
            </div>
            <div class="single stack">
              <div class="label">Stack</div>
            </div>
            <div class="single grip identity">
              <div class="label">Grip</div>
            </div>
            <div class="zone resources">
              <div class="label">Resources</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Card Viewer -->
    <div class="view-card"></div>

  </div>
</div>